<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->

	<bean id="eduqitypeaheadrequest" class="org.eduqi.eduqiservice.rest.control.EduqiTypeaheadRequestImpl"/>
	<bean id="eduqiceprequest" class="org.eduqi.eduqiservice.rest.control.EduqiCepRequestImpl" >
		<constructor-arg ref="eduqiescolacepservice"/>
	</bean>	
	<bean id="eduqistatrequest" class="org.eduqi.eduqiservice.rest.control.EduqiStatRequestImpl"/>
	<bean id="eduqischoolrequest" class="org.eduqi.eduqiservice.rest.control.EduqiSchoolRequestImpl"/>

	<!-- Services -->
	<bean id="eduqiescolacepservice" class="org.eduqi.eduqiservice.core.service.EduqiEscolaCEPServiceImpl" >
		<constructor-arg ref="cepescoladao"/>
	</bean>
	

	<!-- DAOs -->
	<bean id="cepescoladao" class="org.eduqi.eduqiservice.core.dao.CepEscolaDAOImpl" />
	<bean id="dadosescoladao" class="org.eduqi.eduqiservice.core.dao.DadosEscolaDAOImpl" />
	<bean id="descricaoquestionarioescoladao" class="org.eduqi.eduqiservice.core.dao.DescricaoQuestionarioEscolaDAOImpl" />
	<bean id="questescoladao" class="org.eduqi.eduqiservice.core.dao.QuestEscolaDAOImpl" />
	<bean id="resultadoescoladao" class="org.eduqi.eduqiservice.core.dao.ResultadoEscolaDAOImpl" />
	
</beans>
